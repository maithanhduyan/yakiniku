# EditorConfig - https://editorconfig.org
# Đảm bảo encoding nhất quán giữa các editor/IDE

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css,js,json}]
charset = utf-8
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
