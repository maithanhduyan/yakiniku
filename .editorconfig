# EditorConfig â€” Enforce encoding/formatting across ALL editors
# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
charset = utf-8
indent_size = 4

[*.{js,css,html}]
charset = utf-8
indent_size = 4

[*.{json,yml,yaml}]
charset = utf-8
indent_size = 2

[*.csv]
charset = utf-8
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
