{
    "servers": {
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest",
                "--browser",
                "chrome",
                "--viewport-size",
                "1280x720",
                "--output-dir",
                ".playwright-mcp",
                "--output-mode",
                "file",
                "--ignore-https-errors"
            ]
        }
    }
}
